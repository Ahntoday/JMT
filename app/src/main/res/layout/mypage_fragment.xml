<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="575">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.95" />

        <ImageButton
            android:id="@+id/logoutButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/logout" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="180"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="90" />

        <ImageView
            android:id="@+id/mypage_ImageView"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="180"
            android:background="@drawable/mypage_basic" />

        <View
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="90" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="130"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="한식 리뷰를 제일 많이 남긴"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:fontFamily="@font/scdream4"
            android:gravity="left"
            android:text="닉네임 님은"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/scdream6"
            android:gravity="center"
            android:text="“밥 없이 못 사는 "
            android:textColor="#d2d2d2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/scdream6"
            android:gravity="center"
            android:text="토종 한국인”"
            android:textColor="@color/colorMainGreen"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="35"
            android:background="@drawable/my_review" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="  작성한 리뷰 내역"
            android:textColor="#484848"
            android:textSize="12sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:fontFamily="@font/scdream6"
            android:gravity="center|left"
            android:text="0 개 "
            android:textColor="#484848"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="35"
            android:background="@drawable/my_text"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="110"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="  저장한 식당수"
            android:textColor="#484848"
            android:textSize="12sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:fontFamily="@font/scdream6"
            android:gravity="center|left"
            android:text="0 개 "
            android:textColor="#484848"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="35"
            android:background="@drawable/my_qna" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="150"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="  QnA에 작성한 게시물 수"
            android:textColor="#484848"
            android:textSize="12sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:fontFamily="@font/scdream6"
            android:gravity="center|left"
            android:text="0 개 "
            android:textColor="#484848"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="75" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25" />

</LinearLayout>