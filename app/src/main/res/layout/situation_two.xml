<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="416dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="416">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="145"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/situation_imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_weight="150"
            android:src="@drawable/hj_matgol"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/situation_imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_weight="150"
            android:src="@drawable/hj_nadeulmok"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="150"
            android:fontFamily="@font/scdream5"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:text="맛골"
            android:textColor="#323232"
            android:textSize="14sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="150"
            android:fontFamily="@font/scdream5"
            android:gravity="center_vertical"
            android:text="나들목"
            android:textColor="#323232"
            android:textSize="14sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:background="@drawable/location" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="예대"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="뼈해장국, 갈비탕, 오겹살"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:background="@drawable/location" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="후문"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/scdream4"
            android:gravity="center_vertical"
            android:text=" 부추는.. 살아있다..!"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="145"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/situation_imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_weight="150"
            android:src="@drawable/hj_gukbabyeonga"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/situation_imageView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_weight="150"
            android:src="@drawable/hj_damso"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="150"
            android:fontFamily="@font/scdream5"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            android:text="국밥연가"
            android:textColor="#323232"
            android:textSize="14sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="150"
            android:fontFamily="@font/scdream5"
            android:gravity="center_vertical"
            android:text="담소소사골순대육개장"
            android:textColor="#323232"
            android:textSize="14sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:background="@drawable/location" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="예대"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="모듬국밥"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:background="@drawable/location" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:fontFamily="@font/scdream4"
            android:gravity="center"
            android:text="후문"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/scdream4"
            android:gravity="center_vertical"
            android:text="가게이름에 다나옴ㅎ"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

</LinearLayout>