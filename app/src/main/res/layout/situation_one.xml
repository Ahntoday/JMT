            android:textSize="14sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="20" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
