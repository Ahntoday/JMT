        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="120"
            android:fontFamily="@font/scdream4"
            android:gravity="center|left"
            android:text="삼겹정식"
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

