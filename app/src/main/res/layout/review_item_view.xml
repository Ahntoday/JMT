<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/comment_imageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:src="@drawable/temp_user_image_27dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="200"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/scdream5"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/store_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/scdream4"
                android:text="가게명, 위치"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="80"
            android:numStars="5"
            android:progressTint="@color/colorMainGreen"
            android:rating="5" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/review_food_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:src="@drawable/donburi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="360">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:background="@drawable/ic_like_18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:fontFamily="@font/scdream6"
            android:text="좋아요 "
            android:textColor="#3e3e3e"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/like_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:fontFamily="@font/scdream6"
            android:text="0"
            android:textColor="#3e3e3e"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:fontFamily="@font/scdream6"
            android:text="개"
            android:textColor="#3e3e3e"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:background="@drawable/ic_save_18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/review_ment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/scdream4"
            android:text="일식집인지 한식집인지는 모르겠지만 점심시간만 되면 사람도 엄청 많고 맛있음."
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorMainBlack"
            android:textSize="12sp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/header_imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_temp_user_image_27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/header_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/scdream5"
            android:text="닉네임"
            android:textColor="@color/colorMainBlack"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/scdream4"
            android:gravity="center_vertical"
            android:hint="댓글 달기"
            android:inputType="textPersonName|textEmailAddress"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"

            android:textColorHighlight="@color/colorSubBlack"
            android:textColorLink="@color/colorSubBlack"
            android:textCursorDrawable="@color/colorSubBlack"
            android:textSize="12sp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/comment_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:descendantFocusability="afterDescendants"
        android:minHeight="?android:attr/listPreferredItemHeight"/>

</LinearLayout>