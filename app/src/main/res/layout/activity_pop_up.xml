<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:weightSum="300"
    android:background="@drawable/popup_style">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="15"/>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="70"
        android:text="WELCOME"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#323232"
        android:textStyle="bold"
        android:fontFamily="@font/scdream6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="50"
        android:weightSum="300"
        android:orientation="horizontal">

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="254dp"
            android:layout_height="50dp"
            android:layout_weight="254"
            android:fontFamily="@font/scdream6"
            android:gravity="center|left"
            android:text="전대생을 위한 맛집추천어플"
            android:textColor="#d2d2d2"
            android:textSize="20sp" />

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="300">

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="23"/>

        <TextView
            android:id="@+id/jmt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="65"
            android:fontFamily="@font/scdream6"
            android:text="전맛탱"
            android:textColor="#7b7b7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="90"
            android:gravity="center|left"
            android:text="에 오신 걸 "
            android:textColor="#7b7b7b"
            android:textSize="20sp"
            android:fontFamily="@font/scdream6"/>

        <TextView
            android:id="@+id/KoreanWelcome"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="108"
            android:fontFamily="@font/scdream6"
            android:text="환영합니다."
            android:textColor="#7b7b7b"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="23"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="30"
        android:weightSum="300">

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="23" />

        <TextView
            android:layout_width="212dp"
            android:layout_height="30dp"
            android:layout_weight="212"
            android:fontFamily="@font/scdream4"
            android:lineSpacingExtra="2sp"
            android:text="※ 가입승인까지 최대 7일이 소요될 수 있습니다."
            android:textColor="#7b7b7b"
            android:textSize="10sp" />

        <View
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="65"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="300">

        <View
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_weight="272"/>

        <Button
            android:id="@+id/close"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="@font/scdream6"
            android:gravity="center|right"
            android:text="닫기"
            android:textColor="#aecc6a"
            android:textSize="14sp" />

        <View
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="23" />
    </LinearLayout>

</LinearLayout>